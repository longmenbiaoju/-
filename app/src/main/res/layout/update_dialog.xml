<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea">

    <TextView
        android:id="@+id/tvUpTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="版本更新"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <View
        android:id="@+id/vLine"
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:layout_below="@id/tvUpTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tvVersionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vLine"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="版本:5.22.1"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/update_content" />

    <TextView
        android:id="@+id/tvFileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvVersionType"
        android:layout_marginStart="25dp"
        android:text="更新包体积:55.8M"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/update_content" />

    <TextView
        android:id="@+id/tvUpdateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFileSize"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="更新内容:"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/update_content" />

    <TextView
        android:id="@+id/tvUpdateContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUpdateTitle"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Android自定义AlertDialog样式 开发的时候,通常我们要自定义Alert"
        android:textColor="#7a7a7a"
        android:textSize="@dimen/update_content" />

    <CheckBox
        android:id="@+id/cbIgnoreUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUpdateContent"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:text="忽略此版本更新"
        android:textColor="#bcbcbc"
        android:textSize="@dimen/update_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/cbIgnoreUpdate"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTalkLater"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tv_talk_later_radius_selector"
            android:gravity="center"
            android:text="以后再说"
            android:textColor="#7a7a7a"
            android:textSize="@dimen/update_button" />

        <TextView
            android:id="@+id/tvUpdateNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@drawable/tv_update_radius_selector"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="#fff"
            android:textSize="@dimen/update_button" />
    </LinearLayout>
</RelativeLayout>